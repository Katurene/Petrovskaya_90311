<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Animal.AnimalName" class="control-label"></label>
                <input asp-for="Animal.AnimalName" class="form-control" />
                <span asp-validation-for="Animal.AnimalName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Animal.Description" class="control-label"></label>
                <input asp-for="Animal.Description" class="form-control" />
                <span asp-validation-for="Animal.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Animal.Age" class="control-label"></label>
                <input asp-for="Animal.Age" class="form-control" />
                <span asp-validation-for="Animal.Age" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Animal.Image" class="control-label"></label>
                <input asp-for="Animal.Image" class="form-control" />
                <span asp-validation-for="Animal.Image" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="Animal.Image" class="control-label"></label>
                <div class="custom-file mt-3">
                    <input type="file" asp-for="Image"
                           class="custom-file-input" id="customFile">
                    <label class="custom-file-label"
                           for="customFile">Выберите файл</label>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Animal.AnimalGroupId" class="control-label"></label>
                <select asp-for="Animal.AnimalGroupId" class="form-control" asp-items="ViewBag.AnimalGroupId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

