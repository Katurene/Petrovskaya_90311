@page
@model Petrovskaya_90311.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p class="mt-2">
    <a asp-page="Create" class="btn btn-outline-info">
        <span class="fa fa-plus-circle"> Добавить</span>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].AnimalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Animal[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Animal)
        {
            <tr>
                <td>
                    <img src="~/Images/@item.Image" alt="NoImage" width="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnimalName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.AnimalGroupId)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.AnimalId"
                       class="btn btn-outline-info">
                        <span class="fas fa-edit"></span>
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.AnimalId"
                       class="btn btn-outline-danger">
                        <span class="fas fa-trash-alt"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
