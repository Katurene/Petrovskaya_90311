@page "{id:int}"
@model Petrovskaya_90311.Areas.Admin.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Animal.AnimalId" />

            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.Animal.Image))
                {
                    <img src=~/Images/@Model.Animal.Image
                         alt="NoSuchFile" width="150" />
                }
                else
                {
                    <h4>Файл изображения не задан</h4>
                }
                <div class="custom-file mt-3">
                    <input type="file" class="custom-file-input"
                           asp-for="Image" id="customFile">
                    <label class="custom-file-label" for="customFile">
                        Выберите файл изображения
                    </label>
                </div>

                <div class="form-group">
                    <label asp-for="Animal.AnimalName" class="control-label"></label>
                    <input asp-for="Animal.AnimalName" class="form-control" />
                    <span asp-validation-for="Animal.AnimalName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Animal.Description" class="control-label"></label>
                    <input asp-for="Animal.Description" class="form-control" />
                    <span asp-validation-for="Animal.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Animal.Age" class="control-label"></label>
                    <input asp-for="Animal.Age" class="form-control" />
                    <span asp-validation-for="Animal.Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Animal.Image" class="control-label"></label>
                    <input asp-for="Animal.Image" class="form-control" />
                    <span asp-validation-for="Animal.Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Animal.AnimalGroupId" class="control-label"></label>
                    <select asp-for="Animal.AnimalGroupId" class="form-control" asp-items="ViewBag.AnimalGroupId"></select>
                    <span asp-validation-for="Animal.AnimalGroupId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts{
    <script src="~/lib/bs-custom-file-input/dist/bs-custom-file-input.js"></script>
    <script>
bsCustomFileInput.init();
    </script>
}

